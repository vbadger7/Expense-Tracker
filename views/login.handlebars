<main>
<link rel="stylesheet" type="text/css" href="/css/styles.css">
    <div class="form-container">
        <h2>Login</h2>
        <form class = "login-form">
          <div class="form-group">
            <label for="name">Username:</label>
            <input type="text" id="name-login" name="username" placeholder="Enter your name" required autocomplete="off">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password-login" name="password" placeholder="password" required>
          </div>
          <button type="submit" class="submit-btn">Login</button>
        </form>
        <p>Don't have an account? <a class="link" href="/signup">SignUp</a></p>
    </div>
</main>

